<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.android.muscialstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".PlaylistsActivity"
            android:label="@string/title_playlists"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ArtistsActivity"
            android:label="@string/title_artists"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".SongsActivity"
            android:label="@string/title_songs"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/title_now_playing"
            android:screenOrientation="portrait"/>

        <activity android:name=".PaymentActivity"
                  android:label="@string/title_payment"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>